//wap to implement depth first traversal of graphs using adjacency matrix and adjacency list
#include <iostream>
#include <vector>
using namespace std;

void dfsMatrix(int adj[10][10], int n, int node, bool visited[]) {
    visited[node] = true;
    cout << node << " ";
    for (int i = 0; i < n; i++) {
        if (adj[node][i] == 1 && !visited[i]) {
            dfsMatrix(adj, n, i, visited);
        }
    }
}

void dfsList(vector<int> adjList[], int node, bool visited[]) {
    visited[node] = true;
    cout << node << " ";
    for (int neighbor : adjList[node]) {
        if (!visited[neighbor]) {
            dfsList(adjList, neighbor, visited);
        }
    }
}

int main() {
    int n, edges;
    cout << "Enter number of vertices: ";
    cin >> n;
    cout << "Enter number of edges: ";
    cin >> edges;
    int adjMatrix[10][10] = {0};
    vector<int> adjList[10];
    cout << "Enter edges (u v): " << endl;
    for (int i = 0; i < edges; i++) {
        int u, v;
        cin >> u >> v;
        adjMatrix[u][v] = 1;
        adjMatrix[v][u] = 1;
        adjList[u].push_back(v);
        adjList[v].push_back(u);
    }
    int start;
    cout << "Enter starting vertex for DFS: ";
    cin >> start;
    bool visitedMatrix[10] = {false};
    cout << "DFS Traversal (Adjacency Matrix): ";
    dfsMatrix(adjMatrix, n, start, visitedMatrix);
    cout << endl;
    bool visitedList[10] = {false};
    cout << "DFS Traversal (Adjacency List): ";
    dfsList(adjList, start, visitedList);
    cout << endl;
    return 0;
}
